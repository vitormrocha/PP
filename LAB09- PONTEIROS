Ex12: #include <stdio.h> 

/*
Fa√ßa um programa que leia tr√™s valores inteiros e chame uma fun√ß√£o que receba estes 3
valores de entrada e retorne eles ordenados, ou seja, o menor valor na primeira vari√°vel, o 
segundo menor valor na vari√°vel do meio, e o maior valor na √∫ltima vari√°vel. A fun√ß√£o deve 
retornar o valor 1 se os tr√™s valores forem iguais e 0 se existirem valores diferentes. Exibir 
os valores ordenados na tela.


*/

int ordem (int *vetor);

int main () {
    int vetor[3], *p; 
    int i, result; 

    for (i=0; i< 3; i++) {
        printf("Apresente um valor: ");
        scanf("%d", &vetor[i]); 
    }

    p= (int *) malloc (3 * sizeof(int)); 

    for (i=0; i< 3; i++) {
        *(p + i) = vetor[i]; 
    }

    result= ordem(p); 
    if (result == 0) {
        printf("\nValores iguais");
    }
    if (result==1) {
        printf("\nValores diferentes"); 
    }

    return 0;
}

int ordem (int *vetor) {
    int i; 
    int *maior; 
    int *medio; 
    int *menor; 
    
    maior= *(vetor + 0); 
    menor= *(vetor + 0); 
    medio= *(vetor + 1);  
    
    printf("\n\n"); 
    for (i=0; i<3; i++ ) {
        if (*(vetor + i) > maior) {
            maior= *(vetor + i); 
        }
        if (*(vetor + i) < menor) {
            menor= *(vetor + i); 
        }
        if (*(vetor + i) == medio) {
            medio= *(vetor + i);  
        }

    }
    if (maior == menor && maior == medio && menor == medio) {
        return 0; 
    }
    printf("O maior valor eh: %d \nO menor valor eh: %d\nO valor mediano eh: %d", maior, menor, medio);
    return 1; 
    
}





Ex 13:#include <stdio.h> 
#include <stdlib.h> 
#include <string.h>

/*
Elabore uma fun√ß√£o que receba duas strings como par√¢metros e verifique se a segunda 
string ocorre dentro da primeira. Use aritm√©tica de ponteiros para acessar os caracteres das 
strings.


*/

int verificar (char *str, char *str2, int tam, int tam2) {
    int i, j; 
    int verf=0, result=0; 
    

    for (i=0; i<tam; i++) {
        verf = 0;
        if ( *(str+i) == *str2 ) {
            for (j=0; j<tam2; j++ ) {
                if ( *(str + i + j ) == *(str2 + j) ) {
                    verf++;
                } 

            

            }
        } 
            if ( verf == tam2 ) {

                result=1; 
                break;
            }
    }

    return result;

} 


int main () {
 

   char str[50], str2[50]; 
   int verd, tam, tam2;   


   printf("Apresente uma string: ");
   scanf("%50[^\n]", &str); 

   printf("\nApresente outra string: ");
   fflush(stdin);
   scanf("%50[^\n]", &str2); 

    tam= strlen(str); 
    tam2= strlen(str2);

    verd= verificar(str, str2, tam, tam2); 

    if (verd == 1) {
        printf("\nA segunda string existe dentro da primeira."); 
    } 
    else {
        printf("\nA seguda string nao existe dentro da primeira."); 
    }

    


    return 0;
}

